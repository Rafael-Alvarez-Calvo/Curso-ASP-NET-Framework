@model WebApplication.Models.BusCLS

@{
    ViewBag.Title = "Agregar";

    List<SelectListItem> listaTipoBus = (List<SelectListItem>)ViewBag.listaTipoBus;
    List<SelectListItem> listaMarca = (List<SelectListItem>)ViewBag.listaMarca;
    List<SelectListItem> listaModelo = (List<SelectListItem>)ViewBag.listaModelo;
    List<SelectListItem> listaSucursal = (List<SelectListItem>)ViewBag.listaSucursal;
}

<h2>Agregar Buses</h2>

@using (Html.BeginForm("Agregar", "Bus", FormMethod.Post, new { @id = "frmAgregar" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-6">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div>
                @Html.LabelFor(model => model.iidSucursal)
                @Html.DropDownList("iidSucursal", listaSucursal, null, new { @class = "form-control mb-2" })
                @Html.ValidationMessageFor(model => model.iidSucursal, "", new { @class = "text-danger" })
            </div>

            <div>
                @Html.LabelFor(model => model.iidMarca)
                @Html.DropDownList("iidMarca", listaMarca, null, new { @class = "form-control mb-2" })
                @Html.ValidationMessageFor(model => model.iidMarca, "", new { @class = "text-danger" })
            </div>

            <div>
                @Html.LabelFor(model => model.iidModelo)
                @Html.DropDownList("iidModelo", listaModelo, null, new { @class = "form-control mb-2" })
                @Html.ValidationMessageFor(model => model.iidModelo, "", new { @class = "text-danger" })
            </div>

            <div>
                @Html.LabelFor(model => model.iidTipoBus)
                @Html.DropDownList("iidTipoBus", listaTipoBus, null, new { @class = "form-control mb-2" })
                @Html.ValidationMessageFor(model => model.iidTipoBus, "", new { @class = "text-danger" })
            </div>

            <div>
                @Html.LabelFor(model => model.placa)
                @Html.EditorFor(model => model.placa, new { htmlAttributes = new { @class = "form-control mb-2" } })
                @Html.ValidationMessageFor(model => model.placa, "", new { @class = "text-danger" })
                @if (Model != null && Model.mensajeErrorPlaca != null)
                {
                    @Html.Label("", Model.mensajeErrorPlaca, new { @class = "text-danger" })
                }
            </div>

        </div>

        <div class="col-6">
            <div>
                @Html.LabelFor(model => model.fechaCompra)
                @Html.EditorFor(model => model.fechaCompra, new { htmlAttributes = new { @class = "form-control mb-2" } })
                @Html.ValidationMessageFor(model => model.fechaCompra, "", new { @class = "text-danger" })
            </div>

            <div>
                @Html.LabelFor(model => model.numeroFilas)
                @Html.EditorFor(model => model.numeroFilas, new { htmlAttributes = new { @class = "form-control mb-2" } })
                @Html.ValidationMessageFor(model => model.numeroFilas, "", new { @class = "text-danger" })
            </div>

            <div>
                @Html.LabelFor(model => model.numeroColumnas)
                @Html.EditorFor(model => model.numeroColumnas, new { htmlAttributes = new { @class = "form-control mb-2" } })
                @Html.ValidationMessageFor(model => model.numeroColumnas, "", new { @class = "text-danger" })
            </div>

            <div>
                @Html.LabelFor(model => model.descripcion)
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control mb-2" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>

            <div>
                @Html.LabelFor(model => model.observacion)
                @Html.EditorFor(model => model.observacion, new { htmlAttributes = new { @class = "form-control mb-2" } })
                @Html.ValidationMessageFor(model => model.observacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-12 d-flex justify-content-between mt-3">
            @Html.ActionLink("Atrás", "Index", "Bus", null, new { @class = "btn btn-info w-25", @style = "color:white;" })
            <button type="button" class="btn btn-success w-25" data-bs-toggle="modal" data-bs-target="#confirmationAddBus">Guardar</button>
        </div>

    </div>
}

<!-- Modal Confirmation  -->
<div class="modal fade" id="confirmationAddBus" tabindex="-1" role="dialog" aria-labelledby="confirmationEditBusTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationEditBusTitle">¿Desea guardar los cambios?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success w-25" onclick="AddBus()">Aceptar</button>
                <button type="button" class="btn btn-danger w-25" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script>

    function AddBus() {

        const frmAgregarBus = document.getElementById("frmAgregar");

        frmAgregarBus.submit();

    }

</script>

