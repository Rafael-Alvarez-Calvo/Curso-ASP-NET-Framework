@using WebApplication.Models;
@model MarcaCLS

@{
    ViewBag.Title = "Editar";
}

<h2>Editar Marca</h2>

<div class="row">
    <div class="col-6">
        @using (Html.BeginForm("Editar", "Marca", FormMethod.Post, new {  @id="frmEditar"}))
        {
            <div>
                @Html.LabelFor(p => p.iidmarca)
                @Html.TextBoxFor(p => p.iidmarca, new { @class = "form-control mb-2" , @readonly = true}) @* Esta linea crea un input tipo texto con la clase form-control*@
                @Html.ValidationMessage("iidmarca", new { @class = "text-danger" })
            </div>
            
            <div>
                @Html.LabelFor(p => p.nombre)
                @Html.TextBoxFor(p => p.nombre, new { @class = "form-control mb-2" }) @* Esta linea crea un input tipo texto con la clase form-control*@
                @Html.ValidationMessage("nombre", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.descripcion)
                @Html.TextBoxFor(p => p.descripcion, new { @class = "form-control" })
                @Html.ValidationMessage("descripcion", new { @class = "text-danger" })
            </div>
            <div class="d-flex justify-content-between mt-3">
                @Html.ActionLink("Atrás", "Index", "Marca", null, new { @class = "btn btn-info w-25", @style = "color:white;"})
                <input type="submit" class="btn btn-primary w-25" value="Guardar" />
            </div>
        }
    </div>
</div>

<script>

    var frmEditar = document.getElementById("frmEditar");

    frmEditar.addEventListener("submit", (e) => {
        e.preventDefault();

        if (confirm("¿Deseas guardar los cambios?") == 1) {
            frmEditar.submit();
        }
    })


</script>